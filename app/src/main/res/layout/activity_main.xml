<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_camera2"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="#A5A5A5"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/camera2"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/textView_cameraX"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_cameraX"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="#A5A5A5"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/camerax"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_camera2" />

</androidx.constraintlayout.widget.ConstraintLayout>